// header container for building table
#header {
  border: 2px black solid;
  border-radius: 10px;
  background: rgba(192, 192, 192, 0.6);
  margin: 3px;
  position: absolute;
  z-index: 10;
  width: 350px;
  box-shadow: 1px 1px 2px 1px dimgrey;
}

// header container menu buttons
#links {
  display: block;
  height: 30px;
  padding: 5px;
}

.header_link {
  border: 2px black solid;
  min-width: 40%;
  float: left;
  border-radius: 5px;
  padding: 2px;
  text-align: center;
  font-size: 15px;
  padding: 2px 3px;
  background-color: black;
  box-shadow: 2px 2px 3px 1px dimgrey;
  &:hover {
    background-color: grey;
  }
}

.header_link a {
  color: white;
  text-decoration: none;
  text-shadow: 1px 2px 3px grey;
}

#links_divider {
  width: 2px;
  height: 90%;
  margin-left: 6%;
  margin-right: 6%;
  float: left;
  border: 1px black solid;
  border-radius: 5px;
  background: black;
  box-shadow: 1px 1px 2px 1px dimgrey;
}

#link_bottom_divider {
  border: 1px black solid;
  width: 95%;
  margin: 0 auto;
  border-radius: 5px;
}

#header h1 {
  text-align: center;
  font-size: 20px;
}

table {
  margin-left: 10px;
}

#wrapper {
  width: 100%;
  display: inline-block;
  vertical-align: bottom;
  position: absolute;
  bottom: 0;
  text-align: center;
}

// section class for each building bar + name
.building {
  vertical-align: bottom;
  display: inline-block;
  min-width: 80px;
  // border: 2px darkred solid;

  // p element for building name
  > p {
   color: darkred;
   font-size: 120%;
  }
  .gargoyle {
  background: url('gargoyle-icon.jpg');
  background-position: center;
  padding-left: 25px;
  margin-bottom: -5px;
  background-size: contain;
  background-repeat: no-repeat;
  height: 50px;
  width: 50px;
  }
}


// class for styling individual building bar graphics
.building_bar {
  width: 40px;
  border: 1px black solid;
  background-color: silver;
  margin: auto;
  transition: background-color 2s ease-in-out;
  border-top-left-radius: 12px 200px;
  border-top-right-radius: 12px 200px;
  min-height: 15px;

  &:hover {
    background-color: black;
  }

  // element for building height
  aside {
    position: absolute;
    width: 40px;
    min-height: 15px;
    overflow: hidden;
    bottom: 0px;
    //border: 2px solid black;
  }
}
