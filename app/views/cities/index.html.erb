<h1>Listing cities</h1>

<table>
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Country</th>
      <th scope="col">Buildings</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
    <tr>
      <td><%= city.name %></td>
      <td><%= city.country %></td>

      <td class="buildings">
        <% city.buildings.each do |building| %>
          - <%= link_to building.name, building_path(building) %>
          <br />
        <% end %>
      </td>

      <td><%= link_to 'Show', city %></td>
      <td><%= link_to 'Edit', edit_city_path(city) %></td>
      <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New City', new_city_path %>

